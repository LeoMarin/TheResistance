<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerNumber"
    android:background="@color/colorMidnightBlack"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="65dp"
        android:includeFontPadding="false"
        android:text="RESISTANCE"
        android:textColor="@color/colorResistance"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="68dp"
        android:layout_marginTop="60dp"
        android:text="SPIES"
        android:textColor="@color/colorSpy"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/resistance_circle" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/spy_circle" />

    <TextView
        android:id="@+id/textViewResistanceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/colorMidnightBlack"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSpyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center_horizontal"
        android:text="3"
        android:textColor="@color/colorMidnightBlack"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPlayerNumber"
        android:layout_width="149dp"
        android:layout_height="143dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/imageViewLeftArrow"
        android:layout_toStartOf="@+id/imageViewRightArrow"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/colorComplementaryWhite"
        android:textSize="100sp" />

    <ImageView
        android:id="@+id/imageViewLeftArrow"
        android:layout_width="116dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="320dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/arrow_white_left" />

    <ImageView
        android:id="@+id/imageViewRightArrow"
        android:layout_width="116dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="320dp"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/arrow_white_right" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:text="NEXT"
        android:background="@color/colorComplementaryWhite"
        android:textColor="@color/colorMidnightBlack"
        android:textSize="30dp"/>

</RelativeLayout>