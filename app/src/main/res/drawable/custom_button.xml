<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" >
        <shape>
            <gradient
                android:endColor="@color/colorComplementaryWhite"
                android:startColor="@color/colorComplementaryWhite"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorComplementaryWhite" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:endColor="@color/lightGray"
                android:startColor="@color/lightGray"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/lightGray" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>